generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model dia {
  id           String @id @unique
  data         String
  entradaManha String
  saidaManha   String
  entradaTarde String
  saidaTarde   String
  entradaExtra String?
  saidaExtra   String?
  dif_min      Int
  saldoAnt     Int
}

