{
    "compilerOptions": {
      "target": "ES2022",
      "module": "commonjs",
      "paths": {
        "@application/*": ["./src/application/*"],
        "@domain/*": ["./src/domain/*"],
        "@infra/*": ["./src/infra/*"]
      },
      "outDir": "./dist",
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "skipLibCheck": true
    },
    "include": ["**/src/**/*.ts", "**/__test__/**/*.test.ts"]
  }
